<div class="ons-page__container ons-container">
    <div class="ons-grid ons-u-ml-no">
        {{ template "partials/breadcrumb" . }}
        <h1 class="ons-u-fs-xxxl ons-u-mt-s ons-u-fw-b">{{ .Page.Metadata.Title }}</h1>
        <div class="ons-grid__col ons-col-8@m ons-u-pl-no">
            <div class="ons-page__main ons-u-mt-l">
                <form method="get">
                    <fieldset class="ons-fieldset">
                        <legend class="ons-fieldset__legend">Select the geography you would like your dataset to cover</legend>
                        <div class="ons-radios__items">
                            <span class="ons-radios__item ons-radios__item--no-border">
                                <span class="ons-radio ons-radio--no-border">
                                    <input type="radio" id="coverage-default" class="ons-radio__input ons-js-radio" value="coverage-default" name="coverage">
                                    <label class=" ons-radio__label" for="coverage-default">All {{.Geography}} within England and Wales</label>
                                </span>
                            </span>
                            <br>
                            <span class="ons-radios__item ons-radios__item--no-border" style="width: 100%">
                                <span class="ons-radio ons-radio--no-border">
                                    <input type="radio" id="coverage-search" class="ons-radio__input ons-js-radio ons-js-other" value="coverage-search" name="coverage" aria-controls="other-radio-other-wrap" aria-haspopup="true">
                                    <label class=" ons-radio__label " for="coverage-search">Search for {{.Geography}} by name</label>
                                    <span class="ons-radio__other" id="other-radio-other-wrap">
                                        <span class="ons-field">
                                            <label class="ons-label ons-u-pb-xs" for="search-field">Enter an area name or code</label>
                                            <span class="ons-grid--flex ons-search">
                                                <input type="search" id="search-field" class="ons-input ons-search__input" />
                                                <button type="submit" class="ons-btn ons-btn--secondary ons-search__btn ons-u-mt-xs@xxs@s ons-btn--small">
                                                    <span class="ons-btn__inner">
                                                        {{ template "icons/search" }}
                                                        <span class="ons-u-ml-xs">Search</span>
                                                    </span>
                                                </button>
                                            </span>
                                        </span>
                                    </span>
                                </span>
                            </span>
                            <br>
                            <span class="ons-radios__item ons-radios__item--no-border">
                                <span class="ons-radio ons-radio--no-border">
                                    <input type="radio" id="coverage-all" class="ons-radio__input ons-js-radio" value="all" name="coverage">
                                    <label class=" ons-radio__label" for="coverage-all">Select all {{.Geography}} within a larger area</label>
                                </span>
                            </span>
                        </div>
                    </fieldset>
                    <button type="submit" class="ons-btn ons-u-mt-xl ons-u-mb-s">
                        <span class="ons-btn__inner">{{ localise "Continue" $.Language 1 }}</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
