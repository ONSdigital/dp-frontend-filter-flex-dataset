<div class="ons-u-pb-xs">
    <span class="ons-field">
        <label class="ons-label ons-u-pb-xs" for="{{- .ID -}}">
            {{- .Label -}}
        </label>
        <span class="ons-search-component">
            <input 
                type="search" 
                id="{{- .ID -}}" 
                name="{{- .Name -}}" 
                value="{{- .Value -}}" 
                class="ons-input ons-search__input"
                >
            <button 
                type="submit" 
                class="ons-btn ons-btn--secondary ons-search__btn ons-u-mt-xs@xxs@s ons-btn--small"
                name="is-search"
                value="true"
                >
                <span class="ons-btn__inner">
                    {{ template "icons/search" }}
                    <span class="ons-u-ml-xs">
                        {{- localise "SearchButtonText" .Language 1 -}}
                    </span>
                </span>
            </button>
        </span>
    </span>
</div>
